<div class="row">
    <%= render 'sidebar' %>
    <div class="col-md-8">
        <% if !current_user?(@user) %>
            <aside>
                <section class="user_info">
                    <%= render 'shared/user_info', user: @user %>
                </section>
            </aside>
            <%= render 'follow_form' if logged_in? %>
        <% end %>
        <% if @user.microposts.any? %>
            <h3><%= t("dictionary.words.micropost") %> (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
        <% end %>
    </div>
</div>
